.form
  = form_with model: @goal, url: web_v1_goals_path, local: true do |f|
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :aim
      = f.select :aim, Goal.aims, {}, class: 'form-control'
    .form-group
      = f.label :limit
      = f.number_field :limit, min: 0, step: 1, class: 'form-control'
    .form-group
      = f.label :period
      = f.select :period, Goal.periods, {}, class: 'form-control'
    .form-group
      = f.label :size
      = f.select :size, Goal.sizes_for_select, {}, class: 'form-control'
    .form-group
      = f.submit t('goals.create'), class: 'btn btn-primary'
