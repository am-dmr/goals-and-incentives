.form
  = form_with model: @incentive, url: web_v1_incentive_path(@incentive), local: true do |f|
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :size
      = f.select :size, Incentive.size_options_for_select, {}, class: 'form-control'
    .form-group
      = f.submit t('incentives.update'), class: 'btn btn-primary'
