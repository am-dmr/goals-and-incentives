.modal{ role: 'dialog', tabindex: '-1' }
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title
          = t('dailies.edit_value')
        %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button' }
          %span{ 'aria-hidden' => true } Ã—
      .modal-body
        .form
          = form_with model: @daily, url: update_value_web_v1_daily_path(@daily), method: :patch do |f|
            .form-group
              = f.label :value
              = f.number_field :value, min: 0, step: 1, class: 'form-control'
            .form-group
              = f.submit t('dailies.update_value'), class: 'btn btn-primary'
