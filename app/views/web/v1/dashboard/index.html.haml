- if current_web_v1_user
  .row
    .col
      %h3
        = t('dashboard.today')
      %table.table.table-responsive
        %thead.thead-dark
          %tr
            %th{ scope: 'col' }
              = Daily.human_attribute_name(:goal)
            %th{ scope: 'col' }
              = Daily.human_attribute_name(:value)
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:aim)
            %th{ scope: 'col' }
              = Daily.human_attribute_name(:status)
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:incentive)
            %th{ scope: 'col' }
        %tbody
          - @today_dailies.each do |daily|
            = render partial: 'web/v1/dailies/row', object: daily, as: 'daily'
  .row
    .col
      %h3
        = t('dashboard.yesterday')
  .row
    .col
      = link_to t('dashboard.freeze'),
                freeze_web_v1_dailies_path,
                class: 'btn btn-primary button-above-table',
                method: :patch,
                role: 'button'
  .row
    .col
      %table.table.table-responsive
        %thead.thead-dark
          %tr
            %th{ scope: 'col' }
              = Daily.human_attribute_name(:goal)
            %th{ scope: 'col' }
              = Daily.human_attribute_name(:value)
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:aim)
            %th{ scope: 'col' }
              = Daily.human_attribute_name(:status)
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:incentive)
            %th{ scope: 'col' }
        %tbody
          - @yesterday_dailies.each do |daily|
            = render partial: 'web/v1/dailies/row', object: daily, as: 'daily'
  .row
    .col
      %table.table.table-responsive
        %tbody
          %tr
            %td
            - (0..9).to_a.reverse.each do |i|
              %td
                = i.days.ago.strftime('%d.%m')
          - @stats.each do |goal_id, dailies|
            %tr
              %td
                = link_to dailies[:name], web_v1_goal_path(goal_id)
              - (0..9).to_a.reverse.each do |i|
                - daily = dailies[i.days.ago.to_date.strftime('%d%m')]
                %td{ class: "stats-#{daily.try(:[], :status) || 'pending'} stats-incentive-#{daily.try(:[], :incentive_status) || 'none'}" }
