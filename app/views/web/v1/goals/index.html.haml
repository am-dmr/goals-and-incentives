.container
  .row
    .col
      = link_to t('goals.new'),
                new_web_v1_goal_path,
                class: 'btn btn-primary button-above-table',
                role: 'button'
  .row
    .col
      %table.table.table-striped.table-responsive
        %thead.thead-dark
          %tr
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:name)
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:aim)
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:limit)
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:period)
            %th{ scope: 'col' }
              = Goal.human_attribute_name(:size)
            %th{ scope: 'col' }
            %th{ scope: 'col' }
        %tbody
          - @goals.each do |goal|
            %tr
              %td
                = link_to goal.name, web_v1_goal_path(goal)
              %td
                = goal.enum_display(:aim)
              %td
                = goal.limit
              %td
                = goal.enum_display(:period)
              %td
                = goal.enum_display(:size)
              %td
                = link_to t('goals.edit'), edit_web_v1_goal_path(goal)
              %td
                = link_to t('goals.delete'),
                          web_v1_goal_path(goal),
                          method: :delete,
                          data: { confirm: t('goals.delete_confirm') }
