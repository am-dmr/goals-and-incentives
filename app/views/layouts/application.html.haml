!!! 5
%html
  %head
    %title GoalsAndIncentives
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application'

  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
      %a.navbar-brand{ href: '#' } Goals & Incentives
      %button.navbar-toggler{ 'aria-controls' => 'navbarCollapse',
                              'aria-expanded' => 'false',
                              'aria-label' => 'Toggle navigation',
                              'data-target' => '#navbarCollapse',
                              'data-toggle' => 'collapse',
                              type: 'button' }
        %span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        %ul.navbar-nav.mr-auto
          %li.nav-item.active
            %a.nav-link{ href: '#'}
              = t('menu.daily')
          %li.nav-item
            %a.nav-link{ href: '#' }
              = t('menu.goals')
          %li.nav-item
            %a.nav-link{ href: '#' }
              = t('menu.incentives')
        %ul.navbar-nav.ml-md-auto
          %li.nav-item
            - if web_v1_user_signed_in?
              %li
                = link_to 'Logout', destroy_web_v1_user_session_path, method: :delete, class: 'nav-link'
            - else
              %li
                = link_to 'Login', new_web_v1_user_session_path, class: 'nav-link'
    %main.container{ role: 'container' }
      = yield
